#!/bin/python3

import sys

prefix = ''

def say(type, name):
    name = name.replace(";", "")
    val = ''
    if '[' in name:
        name, val = name.split('[')
        val = '*[' + val
    tab = '\t'
    _struct = struct[0]
    if prefix:
        _struct = prefix
    print(f'{_struct}.{name}:\t{tab if len(name) < 5 else ""}.=.+[{type}{val}]')

for line in sys.stdin:
    match line.split():
        case ['//', 'name:', name]:
            prefix = name
        case ['#define', name, value]:
            print(f'{name}={value}')
        case ['struct', name]:
            print('\n\t.struct')
            struct = name
        case ['};']:
            print(f'{struct}_size:')
            prefix = ''
        case [type, name]:
            if '#' in type:
                continue
            say(type[1], name)
        case ['struct', type, name]:
            say(type + '_size', name)
